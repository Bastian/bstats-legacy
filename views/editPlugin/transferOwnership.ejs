<div class="mt-6 rounded-2xl border border-white/10 bg-white/5 p-6">
    <label for="new_owner" class="block text-sm font-medium text-slate-200">New owner username</label>
    <div class="mt-2 flex flex-col gap-3 sm:flex-row sm:items-center">
        <input id="new_owner" type="text" class="input-shell focus-accent w-full" placeholder="FriendWhoMaintainsIt" />
        <button type="button" id="transfer_button" class="accent-bg w-full rounded-full px-6 py-3 text-sm font-semibold shadow-lg shadow-slate-950/40 transition hover:shadow-xl sm:w-auto">
            Transfer ownership
        </button>
    </div>
</div>

<script>
    (function() {
        var input = document.getElementById('new_owner');
        var transferButton = document.getElementById('transfer_button');
        if (!transferButton) return;
        transferButton.addEventListener('click', function() {
            var value = input ? input.value.trim() : '';
            if (!value) {
                showNotice('error', 'Missing name', 'Enter the username that should receive this plugin.');
                return;
            }
            window.transferOwnership(value);
        });
    })();
</script>
