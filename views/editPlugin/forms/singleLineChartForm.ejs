<div data-chart-form="single_linechart" class="hidden space-y-5">
    <div class="space-y-2">
        <h3 class="text-sm font-semibold uppercase tracking-[0.2em] text-slate-400">Single line chart</h3>
        <p class="text-sm text-slate-600">Plot a single metric across timeâ€”perfect for players, servers, or any rolling counter.</p>
    </div>
    <div class="grid gap-4 sm:grid-cols-2">
        <div class="input-group">
            <label class="input-label" for="chart_title_single_linechart">Chart title</label>
            <input id="chart_title_single_linechart" type="text" class="input-control" maxlength="32" required>
        </div>
        <div class="input-group">
            <label class="input-label" for="chart_id_single_linechart">Chart ID</label>
            <input id="chart_id_single_linechart" type="text" class="input-control" maxlength="32" required>
        </div>
    </div>
    <div class="input-group">
        <label class="input-label" for="line_name_single_linechart">Line name</label>
        <input id="line_name_single_linechart" type="text" class="input-control" maxlength="50" placeholder="Players" required>
    </div>
    <label class="flex items-center gap-2 text-sm text-slate-600">
        <input type="checkbox" id="singleLineFilterEnabled" class="h-4 w-4 rounded border-slate-300 text-brand-600 focus:ring-brand-500">
        <span>Limit values</span>
    </label>
    <div class="grid gap-4 sm:grid-cols-2">
        <div class="input-group">
            <label class="input-label" for="singleLineMinValue">Minimum value</label>
            <input id="singleLineMinValue" type="number" min="0" class="input-control" placeholder="Optional">
        </div>
        <div class="input-group">
            <label class="input-label" for="singleLineMaxValue">Maximum value</label>
            <input id="singleLineMaxValue" type="number" min="0" class="input-control" placeholder="Optional">
        </div>
    </div>
    <button type="button" id="createSingleLineChart" class="btn-primary w-full justify-center">Create chart</button>
</div>
