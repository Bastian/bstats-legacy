<div data-chart-form="advanced_pie" class="hidden space-y-5">
    <div class="space-y-2">
        <h3 class="text-sm font-semibold uppercase tracking-[0.2em] text-slate-400">Advanced Pie</h3>
        <p class="text-sm text-slate-600">Send multiple values per server or weight contributions. Great for counting choices or categories.</p>
    </div>
    <div class="grid gap-4 sm:grid-cols-2">
        <div class="input-group">
            <label class="input-label" for="chart_title_advanced_pie">Chart title</label>
            <input id="chart_title_advanced_pie" type="text" class="input-control" maxlength="32" required>
        </div>
        <div class="input-group">
            <label class="input-label" for="chart_id_advanced_pie">Chart ID</label>
            <input id="chart_id_advanced_pie" type="text" class="input-control" maxlength="32" required>
        </div>
    </div>
    <div class="grid gap-4 sm:grid-cols-2">
        <div class="input-group">
            <label class="input-label" for="advancedPieMaxValue">Max value per slice</label>
            <input id="advancedPieMaxValue" type="number" min="0" class="input-control" placeholder="Leave empty for unlimited">
        </div>
    </div>
    <label class="flex items-center gap-2 text-sm text-slate-600">
        <input type="checkbox" id="advancedPieFilterEnabled" class="h-4 w-4 rounded border-slate-300 text-brand-600 focus:ring-brand-500" data-filter-toggle data-target="#advancedPieFilterPanel">
        <span>Filter values before they are stored</span>
    </label>
    <div id="advancedPieFilterPanel" class="hidden space-y-4 rounded-2xl border border-slate-200 bg-slate-50 px-4 py-4">
        <div class="input-group">
            <label class="input-label" for="advancedPieFilterMode">Mode</label>
            <select id="advancedPieFilterMode" class="input-control">
                <option value="whitelist">Whitelist (only allow)</option>
                <option value="blacklist">Blacklist (block)</option>
            </select>
        </div>
        <label class="flex items-center gap-2 text-sm text-slate-600">
            <input type="checkbox" id="advancedPieRegex" class="h-4 w-4 rounded border-slate-300 text-brand-600 focus:ring-brand-500">
            <span>Treat values as regular expressions</span>
        </label>
        <div class="input-group">
            <label class="input-label" for="advancedPieFilterValues">Values (one per line)</label>
            <textarea id="advancedPieFilterValues" class="input-control min-h-[120px]" placeholder="value-one&#10;value-two"></textarea>
        </div>
    </div>
    <button type="button" id="createAdvancedPie" class="btn-primary w-full justify-center">Create chart</button>
</div>
