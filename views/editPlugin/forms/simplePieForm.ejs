<div data-chart-form="simple_pie" class="hidden space-y-5">
    <div class="space-y-2">
        <h3 class="text-sm font-semibold uppercase tracking-[0.2em] text-slate-400">Simple Pie</h3>
        <p class="text-sm text-slate-600">One value per server. Perfect for configuration switches or binary choices.</p>
    </div>
    <div class="grid gap-4 sm:grid-cols-2">
        <div class="input-group">
            <label class="input-label" for="chart_title_simple_pie">Chart title</label>
            <input id="chart_title_simple_pie" type="text" class="input-control" maxlength="32" required>
        </div>
        <div class="input-group">
            <label class="input-label" for="chart_id_simple_pie">Chart ID</label>
            <input id="chart_id_simple_pie" type="text" class="input-control" maxlength="32" required>
            <p class="form-helper">Used in your Metrics codeâ€”lowercase, underscores recommended.</p>
        </div>
    </div>
    <label class="flex items-center gap-2 text-sm text-slate-600">
        <input type="checkbox" id="simplePieFilterEnabled" class="h-4 w-4 rounded border-slate-300 text-brand-600 focus:ring-brand-500" data-filter-toggle data-target="#simplePieFilterPanel">
        <span>Filter values before they are stored</span>
    </label>
    <div id="simplePieFilterPanel" class="hidden space-y-4 rounded-2xl border border-slate-200 bg-slate-50 px-4 py-4">
        <div class="input-group">
            <label class="input-label" for="simplePieFilterMode">Mode</label>
            <select id="simplePieFilterMode" class="input-control">
                <option value="whitelist">Whitelist (only allow)</option>
                <option value="blacklist">Blacklist (block)</option>
            </select>
        </div>
        <label class="flex items-center gap-2 text-sm text-slate-600">
            <input type="checkbox" id="simplePieRegex" class="h-4 w-4 rounded border-slate-300 text-brand-600 focus:ring-brand-500">
            <span>Treat values as regular expressions</span>
        </label>
        <div class="input-group">
            <label class="input-label" for="simplePieFilterValues">Values (one per line)</label>
            <textarea id="simplePieFilterValues" class="input-control min-h-[120px]" placeholder="value-one&#10;value-two"></textarea>
        </div>
    </div>
    <button type="button" id="createSimplePie" class="btn-primary w-full justify-center">Create chart</button>
</div>
