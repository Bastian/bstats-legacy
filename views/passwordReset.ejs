<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8"/>
    <meta name="description" content="Reset your bStats account password.">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1.0"/>
    <title>bStats - Reset password</title>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Space+Grotesk:wght@500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/stylesheets/main.css" />
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
</head>
<body>

<% include templates/navigation.ejs %>
<main class="pb-24">
    <section class="doc-hero">
        <div class="doc-container py-16 sm:py-20">
            <div class="max-w-3xl space-y-4">
                <span class="badge bg-brand-100 text-brand-700">Account</span>
                <h1 class="font-display text-4xl font-semibold tracking-tight text-slate-900 sm:text-5xl">Reset password</h1>
                <p class="text-base leading-relaxed text-slate-600">
                    Use the reset link we sent to your email. If you never requested one, contact an administrator to help you regain access.
                </p>
            </div>
        </div>
    </section>

    <section class="doc-container mt-12">
        <div class="form-card space-y-6">
            <% if (error) { %>
            <div class="doc-callout border-rose-200 bg-rose-50 text-rose-700"><%= error %></div>
            <% } else if (success) { %>
            <div class="doc-callout doc-callout-info"><%= success %></div>
            <a href="/login" class="btn-primary w-full justify-center">Go to login</a>
            <% } else if (token) { %>
            <form method="post" class="space-y-5" id="resetForm">
                <input type="hidden" name="token" value="<%= token %>">
                <% if (typeof username !== 'undefined') { %>
                <p class="text-sm text-slate-500">Resetting password for <span class="font-semibold text-slate-900"><%= username %></span></p>
                <% } %>
                <div class="input-group">
                    <label class="input-label" for="newPassword">New password</label>
                    <input id="newPassword" type="password" name="newPassword" class="input-control" minlength="6" required>
                    <p class="form-helper">Minimum 6 characters</p>
                </div>
                <div class="input-group">
                    <label class="input-label" for="confirmPassword">Confirm password</label>
                    <input id="confirmPassword" type="password" name="confirmPassword" class="input-control" required>
                    <p id="passwordMatchHint" class="form-helper"></p>
                </div>
                <button id="resetButton" type="submit" class="btn-primary w-full justify-center disabled:opacity-50 disabled:cursor-not-allowed" disabled>
                    Reset password
                </button>
            </form>
            <% } else { %>
            <div class="doc-callout doc-callout-note">
                Need a reset link? Reach out to an administrator or DM us on Discord.
            </div>
            <a href="/login" class="btn-primary w-full justify-center">Back to login</a>
            <% } %>
        </div>
    </section>
</main>

<% include templates/footer.ejs %>

<script>
    $(function () {
        const password = $('#newPassword');
        const confirmPassword = $('#confirmPassword');
        const hint = $('#passwordMatchHint');
        const submit = $('#resetButton');

        function updateState() {
            if (!password.length || !confirmPassword.length) {
                return;
            }
            const passVal = password.val();
            const confirmVal = confirmPassword.val();
            if (!passVal || !confirmVal) {
                hint.text('');
                submit.prop('disabled', true);
                return;
            }
            if (passVal.length < 6) {
                hint.text('Password must be at least 6 characters').addClass('text-rose-600').removeClass('text-emerald-600');
                submit.prop('disabled', true);
                return;
            }
            if (passVal === confirmVal) {
                hint.text('Passwords match').addClass('text-emerald-600').removeClass('text-rose-600');
                submit.prop('disabled', false);
            } else {
                hint.text('Passwords do not match').addClass('text-rose-600').removeClass('text-emerald-600');
                submit.prop('disabled', true);
            }
        }

        password.on('input', updateState);
        confirmPassword.on('input', updateState);
    });
</script>

<% include templates/globalScripts.ejs %>

</body>
</html>
