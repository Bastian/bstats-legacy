</head>

<body class="bg-slate-950 text-slate-100 antialiased">
<% include templates/navigation.ejs %>

<main>
    <section class="relative isolate overflow-hidden">
        <div class="absolute inset-0 -z-20 bg-slate-950"></div>
        <div class="absolute inset-0 -z-10 hero-noise opacity-30"></div>
        <div class="mx-auto max-w-6xl px-6 py-24 sm:py-28 lg:py-32">
            <div class="grid gap-10 lg:grid-cols-[1.1fr,0.9fr] lg:items-start">
                <div class="space-y-6">
                    <span class="inline-flex items-center gap-2 rounded-md border border-white/20 bg-white/5 px-3 py-1 text-[11px] font-semibold uppercase tracking-[0.3em] text-white/70">Global dashboard</span>
                    <h1 class="text-4xl font-semibold tracking-tight text-white sm:text-5xl">What’s happening across <%= software.name %></h1>
                    <p class="max-w-2xl text-sm leading-6 text-slate-300">Every plugin that reports to bStats powers these charts. Pop open the graphs below to see server adoption, player counts and where in the world this platform is running.</p>
                    <div class="grid gap-4 sm:grid-cols-2">
                        <div class="rounded-2xl border border-white/15 bg-slate-900/80 p-4 shadow-inner shadow-slate-950/40">
                            <p class="text-xs font-semibold uppercase tracking-[0.3em] text-slate-400">Servers (current / record)</p>
                            <p id="serversBadge" class="mt-3 text-2xl font-semibold text-white">Loading…</p>
                        </div>
                        <div class="rounded-2xl border border-white/15 bg-slate-900/80 p-4 shadow-inner shadow-slate-950/40">
                            <p class="text-xs font-semibold uppercase tracking-[0.3em] text-slate-400">Players (current / record)</p>
                            <p id="playersBadge" class="mt-3 text-2xl font-semibold text-white">Loading…</p>
                        </div>
                    </div>
                </div>

                <div class="rounded-3xl border border-white/10 bg-slate-900/75 p-6 shadow-2xl shadow-slate-950/60 backdrop-blur">
                    <h2 class="text-sm font-semibold uppercase tracking-[0.3em] text-slate-400">Helpful links</h2>
                    <ul class="mt-4 space-y-3 text-sm text-slate-300">
                        <li><a href="/plugin-list" class="accent-text hover:opacity-80">Browse all plugins</a></li>
                        <li><a href="/help/rest-api" class="accent-text hover:opacity-80">Pull this data via the REST API</a></li>
                        <li><a href="/help/custom-charts" class="accent-text hover:opacity-80">Add custom charts to your plugin</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </section>

    <section class="bg-slate-900/70 py-16">
        <div class="mx-auto max-w-6xl px-6">
            <div id="charts" class="grid gap-8 xl:grid-cols-2"></div>
            <p class="mt-10 text-center text-xs uppercase tracking-[0.3em] text-slate-500">Charts powered by <a href="https://www.highcharts.com" class="accent-text hover:opacity-80">Highcharts</a></p>
        </div>
    </section>
</main>

<% include templates/footer.ejs %>

<!-- Charts -->
<script src="https://code.highcharts.com/stock/6.0.1/highstock.js"></script>
<script src="https://code.highcharts.com/maps/6.0.1/modules/map.js"></script>
<script src="https://code.highcharts.com/6.0.1/modules/exporting.js"></script>
<script src="https://code.highcharts.com/6.0.1/modules/no-data-to-display.js"></script>
<script src="https://code.highcharts.com/6.0.1/modules/drilldown.js"></script>
<script src="https://code.highcharts.com/maps/6.0.1/modules/data.js"></script>
<script src="https://code.highcharts.com/mapdata/custom/world.js"></script>
<script src="/javascripts/charts/themes/chartTheme.js"></script>
<script src="/javascripts/charts/charts.js"></script>
<script>
    $.getJSON('/api/v1/plugins/<%= plugin.id %>/charts', function (charts) {
        var chartIdsSorted = Object.keys(charts).sort(function(a,b){return charts[a].position-charts[b].position});
        var chartsGrid = $('#charts');
        var cardBase = 'chart-card relative overflow-hidden rounded-3xl border border-white/10 bg-slate-950/70 p-6 shadow-xl shadow-slate-950/30 backdrop-blur';
        var pieSurface = 'chart-surface h-[420px] w-full';
        var lineSurface = 'chart-surface h-[420px] w-full';
        var mapSurface = 'chart-surface h-[600px] w-full';
        var barSurface = 'chart-surface h-[420px] w-full';

        for (var i = 0; i < chartIdsSorted.length; i++) {
            var chartId = chartIdsSorted[i];
            if (!charts.hasOwnProperty(chartId)) {
                continue;
            }
            var chart = charts[chartId];
            var markup = '';

            switch (chart.type) {
                case 'simple_pie':
                case 'advanced_pie':
                case 'drilldown_pie':
                    markup = '<article id="' + chartId + '" class="' + cardBase + ' xl:col-span-1"><div id="' + chartId + 'Pie" class="' + pieSurface + '"></div></article>';
                    break;
                case 'single_linechart':
                    markup = '<article id="' + chartId + '" class="' + cardBase + ' xl:col-span-2"><div id="' + chartId + 'LineChart" class="' + lineSurface + '"></div></article>';
                    break;
                case 'simple_map':
                case 'advanced_map':
                    markup = '<article id="' + chartId + '" class="' + cardBase + ' xl:col-span-2"><div id="' + chartId + 'Map" class="' + mapSurface + '"></div></article>';
                    break;
                case 'simple_bar':
                case 'advanced_bar':
                    markup = '<article id="' + chartId + '" class="' + cardBase + ' xl:col-span-2"><div id="' + chartId + 'Bar" class="' + barSurface + '"></div></article>';
                    break;
                default:
                    break;
            }

            if (markup) {
                chartsGrid.append(markup);
            }
        }

        if (window.location.hash) {
            $('html,body').animate({
                scrollTop: $(window.location.hash).offset().top
            }, 1200);
        }
    });
</script>
<script>
    function getPluginId() {
        return "<%= plugin.id %>";
    }

    function updatePlayersBadge(data) {
        if (!Array.isArray(data) || data.length === 0) {
            $('#playersBadge').text('n/a');
            return;
        }
        var current = data[data.length-1][1];
        var record = 0;
        for (var i = 0; i < data.length; i++) {
            record = data[i][1] > record ? data[i][1] : record;
        }
        $('#playersBadge').text(current + ' / ' + record);
    }

    function updateServersBadge(data) {
        if (!Array.isArray(data) || data.length === 0) {
            $('#serversBadge').text('n/a');
            return;
        }
        var current = data[data.length-1][1];
        var record = 0;
        for (var i = 0; i < data.length; i++) {
            record = data[i][1] > record ? data[i][1] : record;
        }
        $('#serversBadge').text(current + ' / ' + record);
    }
</script>

<% include templates/globalScripts.ejs %>

</body>
</html>
