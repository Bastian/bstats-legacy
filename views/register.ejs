<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8"/>
    <meta name="description" content="Create a new bStats account.">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1.0"/>
    <title>bStats - Register</title>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Space+Grotesk:wght@500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/stylesheets/main.css" />

    <script src="https://www.google.com/recaptcha/api.js" async defer></script>
</head>

<body>

<% include templates/navigation.ejs %>
<main class="pb-24">
    <section class="doc-hero">
        <div class="doc-container py-16 sm:py-20">
            <div class="max-w-xl space-y-4">
                <span class="badge bg-brand-100 text-brand-700">Account</span>
                <h1 class="font-display text-4xl font-semibold tracking-tight text-slate-900 sm:text-5xl">Create an account</h1>
                <p class="text-base leading-relaxed text-slate-600">
                    Register once to manage metrics, publish custom charts, and keep tabs on adoption.
                </p>
            </div>
        </div>
    </section>

    <section class="doc-container mt-12">
        <div class="form-card space-y-6">
            <% if (failed) { %>
            <div class="doc-callout border-rose-200 bg-rose-50 text-rose-700">
                This username is already taken. Choose another one to continue.
            </div>
            <% } else if (wrongCaptcha) { %>
            <div class="doc-callout border-amber-200 bg-amber-50 text-amber-700">
                Please solve the captcha to prove you are not a robot.
            </div>
            <% } %>

            <form id="registerForm" method="post" class="space-y-5">
                <div class="form-field">
                    <label class="form-label" for="username">Username</label>
                    <input id="username" type="text" name="username" autocomplete="username"
                           pattern="^[-_a-zA-Z0-9]+(\\s[-_a-zA-Z0-9]+)*$" maxlength="32"
                           class="form-input" required>
                    <p class="form-helper">Letters, numbers, underscores. Spaces allowed between words.</p>
                </div>

                <div class="form-field">
                    <label class="form-label" for="password">Password</label>
                    <input id="password" type="password" name="password" autocomplete="new-password" class="form-input" required>
                </div>

                <div class="form-field">
                    <label class="form-label" for="password_confirm">Confirm password</label>
                    <input id="password_confirm" type="password" autocomplete="new-password" class="form-input" required>
                    <p id="passwordMismatch" class="form-error hidden">Passwords do not match.</p>
                </div>

                <label class="flex items-start gap-3 text-sm text-slate-600">
                    <input type="checkbox" id="accept-privacy-policy" class="mt-1 h-4 w-4 rounded border-slate-300 text-brand-600 focus:ring-brand-500">
                    <span>I accept the <a class="font-semibold text-brand-600 hover:text-brand-700" href="/privacy-policy">privacy policy</a>.</span>
                </label>

                <div class="flex justify-center">
                    <div class="g-recaptcha" data-sitekey="<%= publicKey %>" data-callback="correctCaptcha"></div>
                </div>

                <button id="registerButton" type="submit" name="btn_register"
                        class="btn-primary w-full justify-center disabled:cursor-not-allowed disabled:opacity-50"
                        disabled>
                    Create account
                </button>
            </form>

            <p class="text-center text-sm text-slate-500">
                Already have an account?
                <a class="font-semibold text-brand-600 hover:text-brand-700" href="/login">Sign in</a>.
            </p>
        </div>
    </section>
</main>

<% include templates/footer.ejs %>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        const username = document.getElementById('username');
        const password = document.getElementById('password');
        const confirmPassword = document.getElementById('password_confirm');
        const privacyCheckbox = document.getElementById('accept-privacy-policy');
        const registerButton = document.getElementById('registerButton');
        const passwordMismatch = document.getElementById('passwordMismatch');
        const usernamePattern = /^[-_a-zA-Z0-9]+(\s[-_a-zA-Z0-9]+)*$/;
        let captchaSolved = false;

        function passwordsMatch() {
            return password.value === confirmPassword.value;
        }

        function isValidUsername() {
            return usernamePattern.test(username.value);
        }

        function isFormValid() {
            return password.value.length > 0 &&
                passwordsMatch() &&
                isValidUsername() &&
                captchaSolved &&
                privacyCheckbox.checked;
        }

        function updateState() {
            if (passwordsMatch()) {
                passwordMismatch.classList.add('hidden');
            } else if (confirmPassword.value.length > 0) {
                passwordMismatch.classList.remove('hidden');
            } else {
                passwordMismatch.classList.add('hidden');
            }

            registerButton.disabled = !isFormValid();
        }

        username.addEventListener('input', updateState);
        password.addEventListener('input', updateState);
        confirmPassword.addEventListener('input', updateState);
        privacyCheckbox.addEventListener('change', updateState);

        window.correctCaptcha = function () {
            captchaSolved = true;
            updateState();
        };

        updateState();
    });
</script>

<% include templates/globalScripts.ejs %>

</body>
</html>
