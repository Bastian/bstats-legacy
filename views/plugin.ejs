<script>
(function() {
    var copyButton = document.getElementById('copyPluginId');
    if (!copyButton) {
        return;
    }
    copyButton.addEventListener('click', function() {
        var pluginId = copyButton.getAttribute('data-plugin-id');
        if (!navigator.clipboard) {
            var tempInput = document.createElement('input');
            tempInput.value = pluginId;
            document.body.appendChild(tempInput);
            tempInput.select();
            document.execCommand('copy');
            tempInput.remove();
        } else {
            navigator.clipboard.writeText(pluginId).catch(function() {});
        }
        copyButton.classList.add('bg-white/10', 'text-white');
        setTimeout(function() {
            copyButton.classList.remove('bg-white/10', 'text-white');
        }, 1200);
    });
})();
</script>

<script>
    $.getJSON('/api/v1/plugins/<%= plugin.id %>/charts', function (charts) {
        var chartIdsSorted = Object.keys(charts).sort(function(a,b){return charts[a].position-charts[b].position});
        var chartsGrid = $('#charts');
        var cardBase = 'chart-card relative overflow-hidden rounded-3xl border border-white/10 bg-slate-950/70 p-6 shadow-xl shadow-slate-950/30 backdrop-blur';
        var pieSurface = 'chart-surface h-[420px] w-full';
        var lineSurface = 'chart-surface h-[420px] w-full';
        var mapSurface = 'chart-surface h-[600px] w-full';
        var barSurface = 'chart-surface h-[420px] w-full';

        for (var i = 0; i < chartIdsSorted.length; i++) {
            var chartId = chartIdsSorted[i];
            if (!charts.hasOwnProperty(chartId)) {
                continue;
            }
            var chart = charts[chartId];
            var markup = '';

            switch (chart.type) {
                case 'simple_pie':
                case 'advanced_pie':
                case 'drilldown_pie':
                    markup = '<article id="' + chartId + '" class="' + cardBase + ' xl:col-span-1"><div id="' + chartId + 'Pie" class="' + pieSurface + '"></div></article>';
                    break;
                case 'single_linechart':
                    markup = '<article id="' + chartId + '" class="' + cardBase + ' xl:col-span-2"><div id="' + chartId + 'LineChart" class="' + lineSurface + '"></div></article>';
                    break;
                case 'simple_map':
                case 'advanced_map':
                    markup = '<article id="' + chartId + '" class="' + cardBase + ' xl:col-span-2"><div id="' + chartId + 'Map" class="' + mapSurface + '"></div></article>';
                    break;
                case 'simple_bar':
                case 'advanced_bar':
                    markup = '<article id="' + chartId + '" class="' + cardBase + ' xl:col-span-2"><div id="' + chartId + 'Bar" class="' + barSurface + '"></div></article>';
                    break;
                default:
                    break;
            }

            if (markup) {
                chartsGrid.append(markup);
            }
        }

        if (window.location.hash) {
            $('html,body').animate({
                scrollTop: $(window.location.hash).offset().top
            }, 1200);
        }
    });
</script>

<script type="application/javascript">
    function getPluginId() {
